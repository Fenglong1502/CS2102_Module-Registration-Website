<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>{{ title }}</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://fonts.googleapis.com/css?family=DM+Sans:300,400,700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/docs.min.css">
  <link rel="stylesheet" href="/stylesheets/bootstrap-datepicker.css">
  <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css">
  <link rel="stylesheet" href="/stylesheets/owl.carousel.min.css">
  <link rel="stylesheet" href="/stylesheets/owl.theme.default.min.css">
  <link rel="stylesheet" href="/stylesheets/AdminLTE.min.css">
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/aos.css">
  <link rel="icon" type="image/png" href="images/icons/favicon.ico" />

  <link rel="stylesheet" type="text/css" href="./vendor/animate/animate.css">
  <link rel="stylesheet" type="text/css" href="./vendor/select2/select2.min.css">
  <link rel="stylesheet" type="text/css" href="./vendor/perfect-scrollbar/perfect-scrollbar.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/util.css">
  <link rel="stylesheet" type="text/css" href="/stylesheets/main.css">
</head>

<body>
  <script src="./js/jquery-3.3.1.min.js"></script>
  <script src="js/popper.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/owl.carousel.min.js"></script>
  <script src="js/jquery.sticky.js"></script>
  <script src="js/jquery.waypoints.min.js"></script>
  <script src="js/jquery.animateNumber.min.js"></script>
  <script src="js/jquery.fancybox.min.js"></script>
  <script src="js/jquery.easing.1.3.js"></script>
  <script src="js/bootstrap-datepicker.min.js"></script>
  <script src="js/aos.js"></script>
  <script src="js/adminlte.min.js"></script>
  <script src="js/main.js"></script>
  <script src="./vendor/select2/select2.min.js"></script>


  <header class="navbar navbar-expand navbar-dark flex-column flex-md-row bd-navbar">
    <a class="navbar-brand mr-0 mr-md-2" href="localhost:3000/" aria-label="Bootstrap">
      <img src="/images/logo2.png" width="280" height="70" />
    </a>
    {{#if user}}
    <ul class="navbar-nav flex-row ml-md-auto d-none d-md-flex">
      <li class="nav-item" style="color: white">
        {{#if user.isStudent }}
        <a class="mb-3 mb-md-0 ml-md-3" href="/users/viewStudentInformation">Welcome, {{user.fname}} {{user.lname}}</a>
        {{else}}
        <a class="mb-3 mb-md-0 ml-md-3" href="/users/viewAdminInformation">Welcome, (Admin) {{user.fname}} {{user.lname}}</a>
        {{/if}}
      </li>
    </ul>

    <a class="btn btn-bd-download d-none d-lg-inline-block mb-3 mb-md-0 ml-md-3" href="/users/logout">Logout</a>

    {{else}}
    <a class="btn btn-bd-download d-none d-lg-inline-block mb-3 mb-md-0 ml-md-3" href="/users/login">Login</a>
    {{/if}}
  </header>

  <div class="container-fluid">
    <div class="row flex-xl-nowrap">
      <div class="col-12 col-md-3 col-xl-2 bd-sidebar">
        <nav class="collapse bd-links" id="bd-docs-nav">
          <div class="bd-toc-item">
            {{#if user.isAdmin }}
            <ul class="sidebar-menu">
              <li class="header"><span style="font-size: 24px">Modules</span></li>
              <a class="bd-toc-link" href="/modules/adminViewAllModules">Modules List</a>
              <a class="bd-toc-link" href="/modules/createModule">Create New Module</a>

              <li class="header"><span style="font-size: 24px">Appeals</span></li>
              <a class="bd-toc-link" href="/appeals/adminViewAllAppeals">View Students' Appeals</a>

              <li class="header"><span style="font-size: 24px">Students</span></li>
              <a class="bd-toc-link" href="/users/viewAllStudents">View All Student</a>

              <li class="header"><span style="font-size: 24px">Others</span></li>
              <a class="bd-toc-link" href="/users/updateRound">Update Rounds</a>
            </ul>


            {{/if}}
            {{#if user.isStudent }}
            <ul class="sidebar-menu">
              <li class="header"><span style="font-size: 24px">Modules</span></li>
              <a class="bd-toc-link" href="/modules/registerNewModule">View All Modules</a>
              <a class="bd-toc-link" href="/modules/viewRegisteredModule">View Registered Modules</a>
              <a class="bd-toc-link" href="/modules/viewEnrolledModules">View Enrolled Modules</a>

              <li class="header"><span style="font-size: 24px">Appeals</span></li>
              <a class="bd-toc-link" href="/appeals/viewAllAppeals">View All Appeals</a>
              <a class="bd-toc-link" href="/appeals/addAppeal">Add Appeal</a>

              <li class="header"><span style="font-size: 24px">Others</span></li>
              <a class="bd-toc-link" href="/users/viewStudentInformation">Student Information</a>
            </ul>

            {{/if}}

          </div>
        </nav>
      </div>
      <main class="col-12 col-md-9 col-xl-10 py-md-3 pl-md-5 bd-content" role="main">
        <div>
          {{{body}}}
        </div>
      </main>

    </div>
  </div>


</body>

</html>