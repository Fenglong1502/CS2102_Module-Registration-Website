<div class="site-section pt-0 pb-0">
    <div class="container">
        <div class="row">
            <div class="col-12">

                <form method="POST" action="/modules/createModule">
                    <div class="row align-items-center mb-4">
                        <div class="col-md-6">
                            <h3 class="m-0"></h3>
                        </div>
                        <div class="col-md-6 text-md-right" <span class="text-primary"></span> <span> </span></span>
                        </div>
                    </div>
                    <div class="row">
                        <h1> Module Creation
                        </h1>
                    </div>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="cf-1">Module Name</label>
                            <input type="text" data-role="tagsinput" name="modName" placeholder="Module Name"
                                class="form-control">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="cf-2">Module code</label>
                            <input type="text" name="modCode" placeholder="Module Code" class="form-control">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="cf-3">Module Credit</label>
                            <input type="text" name="modCredit" placeholder="E.g. 4" class="form-control">
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-4">
                            <label for="cf-1">Quota</label>
                            <input type="text" name="quota" placeholder="E.g. 100" class="form-control">
                        </div>
                        <div class="form-group col-md-4">
                            <label for="cf-2">Department</label>
                            <select name="department" id="department" class="form-control"
                                placeholder="Select Department">
                                <option value="CS">Computer Science</option>
                                <option value="IS">Information System</option>
                                <option value="BA">Business Analytics</option>
                                <option value="CE">Computer Engineering</option>
                                <option value="ISE">Infomration Security</option>
                            </select>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="cf-3">Semester Offered</label>
                            <span class="form-control" id="semOffered">
                                <input type="radio" name="sem" value="sem1"> Sem 1 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="radio" name="sem" value="sem2"> Sem 2 &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                <input type="radio" name="sem" value="sem12"> Sem 1 & 2
                        </div>
                    </div>

                    <div class="row">
                        <div class="form-group col-md-12">
                            <textarea name="desc" class="form-control" placeholder="Module Descrption." cols="30"
                                rows="8"></textarea>
                        </div>
                    </div>

