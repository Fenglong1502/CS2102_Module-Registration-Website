<style>
    .blog-container {
        background: white;
        border-color: #563d7c;
        border-radius: 5px;
        box-shadow: hsla(0, 0, 0, .2) 0 4px 2px -2px;
        font-family: "adelle-sans", sans-serif;
        font-weight: 100;
        margin: 10px auto;
        width: 70%;
    }

    .blog-body {
        margin: 0 auto;
        width: 90%;
    }

    .blog-title h1 a {
        color: #333;
        font-weight: 100;
    }

    .blog-summary p {
        color: lighten(#333, 10%);
    }
</style>


<div class="blog-container" style="border: solid 1px black; height:700px">
    <div class="blog-body">
        <div class="row align-items-center">
            <div class="col-lg-12" style="padding-left:0px !important">
                <h3 style="text-align:center; margin-top:30px;">My Modules</h3>
                <h5 style="text-align:center">AY {{year}} - Sem {{sem}}</h5>


                <div class="row" style="margin-bottom: 20px;">
                    <form method="POST" action="/modules/selectEnrolledModulesAY">
                        <select name="ay"
                            style="margin-top: 50px; height: calc(1.5em + 0.75rem + 2px); font-size: 1rem; padding-left:10px; padding-right:10px; ">
                            <option value="{{year}}{{sem}}" hidden="hidden" selected="selected">
                                AY{{year}} - Sem{{sem}}</option>
                            {{#each semesters}}
                            <option value="{{this.ay}}{{this.sem}}">AY{{this.ay}} - Sem{{this.sem}}</option>
                            {{/each}}
                        </select>
                        <input class="btn btn-primary" type="submit" value="Select" />
                    </form>
                    </select>
                </div>
                </br>
                <div class=row>
                    <table style="width:100%; border: 1px solid #656565; border-radius: 25px; ">
                        <tr
                            style=" background-color: #563d7c; color:white; margin-left: 5px; margin-right:5px; border-radius: 25px; text-align:center; height:40px;">
                            <th>Module Code</th>
                            <th>Module Name</th>
                            <th>Units</th>
                            <th>Grade</th>
                            <th>Status</th>
                        </tr>

                        {{#each enrolledModules}}
                        <tr style="margin-left: 5px; margin-right:5px;text-align:center; height:30px;">
                            <td>{{this.modulecode}}</td>
                            <td>{{this.modulename}}</td>
                            <td>{{this.credit}}</td>
                            {{#if this.grade}}
                            <td>{{this.grade}}</td>
                            {{else}}
                            <td>-</td>
                            {{/if}}
                            <td>{{this.status}}</td>
                        </tr>
                        {{/each}}
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>