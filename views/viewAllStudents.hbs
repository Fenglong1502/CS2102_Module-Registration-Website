
<div class="form-group row mb-3 mt-3">
    <h1> View all Students </h1>
</div>

<div class="form-group row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form method="POST" action="/users/searchStudent" class="bd-search d-flex align-items-center">
            <div class="col-md-9 mb-4 mb-lg-0">
                <input type="text" class="form-control" name="searchedValue"
                    placeholder="Search student's nusnet ID, name">
            </div>
            <div class="col-md-3">
                <input type="submit" style="background-color: #563d7c; border-color: #563d7c"
                    class="btn btn-block btn-primary text-white py-1 px-2" value="Search" />
            </div>
        </form>
    </div>
</div>

{{#if searchedValue}}
<div class="form-group row">
    <p>Search Result for "{{searchedValue}}"
        <a href="/users/viewAllStudents"><span class="fa fa-times-circle"></span></a>
    </p>
</div>
{{/if}}






<div class="container-fluid">
    <div class="row align-items-center">
        <div class="col-lg-12" style="padding-left:0px !important">

            <div class=row>
                <table style="width:100%; border: 1px solid #656565; border-radius: 25px; ">
                    <tr
                        style=" background-color: #563d7c; color:white; margin-left: 5px; font-size: 130%; margin-right:5px; border-radius: 25px; text-align:center; height:50px">
                        <th>NusnetID</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Year</th>
                        <th>Faculty</th>
                        <th>Course</th>
                        <th></th>
                    </tr>
                    {{#each students}}
                    <tr style="margin-left: 5px; font-size: large; margin-right:5px;text-align:center; height: 40px;">
                        <form method="POST" action="/users/viewStudentDetails/{{this.nusnetid}}">
                            <td>{{this.nusnetid}}</td>
                            <td>{{this.fname}}</td>
                            <td>{{this.lname}}</td>
                            <td>{{this.year}}</td>
                            <td>{{this.faculty}}</td>
                            <td>{{this.majorname}}</td>
                            <td>
                                <button type="submit">
                                    <span class="fa fa-search py-1 px-1 mb-2"></span>
                                </button>
                                {{!-- <input type="submit" class="btn btn-block btn-primary text-white py-1 px-1 mb-2"
                                    value="View" />
                                    </td> --}}
                        </form>
                    </tr>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>
</div>

